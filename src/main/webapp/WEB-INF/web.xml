<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <welcome-file-list>
        <welcome-file>/main.html</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>url</param-name>
        <param-value>https://nhnacademy.com/</param-value>
    </context-param>

    <context-param>
        <param-name>counterFileName</param-name>
        <param-value>counter.dat</param-value>
    </context-param>

    <filter>
        <filter-name>counterFilter</filter-name>
        <filter-class>com.nhnacademy.study.filter.CounterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>counterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.nhnacademy.study.listener.ServletContextListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.nhnacademy.study.listener.SessionListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.HelloServlet</servlet-class>
        <init-param>
            <param-name>title</param-name>
            <param-value>Mr.</param-value>
        </init-param>
        <init-param>
            <param-name>name</param-name>
            <param-value>marco</param-value>
        </init-param>
<!--        <load-on-startup>1</load-on-startup>-->
    </servlet>

    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>beautifyServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.BeautifyServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>beautifyServlet</servlet-name>
        <url-pattern>/beautify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>multipleServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.MultipleServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>multipleServlet</servlet-name>
        <url-pattern>/multiple</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>counterServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.CounterServlet</servlet-class>
        <init-param>
            <param-name>counter</param-name>
            <param-value>100</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>counterServlet</servlet-name>
        <url-pattern>/counter</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>nowServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.NowServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>nowServlet</servlet-name>
        <url-pattern>/now</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>requestServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.RequestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>requestServlet</servlet-name>
        <url-pattern>/req</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>

    <servlet>
        <servlet-name>setCookieServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.SetCookieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>setCookieServlet</servlet-name>
        <url-pattern>/set-cookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>readCookieServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.ReadCookieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>readCookieServlet</servlet-name>
        <url-pattern>/read-cookie</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>domainCookieServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.DomainCookieServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>domainCookieServlet</servlet-name>
        <url-pattern>/domain-cookie/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.login.LoginServlet</servlet-class>
        <init-param>
            <param-name>id</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>pwd</param-name>
            <param-value>1234</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>com.nhnacademy.study.login.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>com.nhnacademy.study.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>loginCheckFilter</filter-name>
        <filter-class>com.nhnacademy.study.filter.LoginCheckFilter</filter-class>
        <init-param>
            <param-name>exclude-urls</param-name>
            <param-value>
                /login
                /logout
                /login.html
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>loginCheckFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>